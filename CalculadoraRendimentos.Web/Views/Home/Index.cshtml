@model ValorAcumulado
@{ 
    ViewBag.Title = "Calculadora de rendimentos";
}

<div class="container">
    <header class="jumbotron">
        <h1 class="mt-3">@ViewBag.Title</h1>
    </header>
    <main>
        <form asp-action="Index" method="post">
            <div class="row">
                <label asp-for="MonthlyDeposit" class="control-label col-3">Deposito mensal</label>
                <input asp-for="MonthlyDeposit" class="form-control col-3" />
                <span asp-validation-for="@Model.MonthlyDeposit" class="text-danger col"></span>
            </div>
            <div class="row">
                <label asp-for="InterestRate" class="control-label col-3">Taxa de juros</label>
                <input asp-for="InterestRate" class="form-control col-3" />
                <span asp-validation-for="@Model.InterestRate" class="text-danger col"></span>
            </div>
            <div class="row">
                <label asp-for="Years" class="control-label col-3">Anos</label>
                <input asp-for="Years" class="form-control col-3" />
                <span asp-validation-for="@Model.Years" class="text-danger col"></span>
            </div>
            <div class="row">
                <label class="control-label col-3">Valor acumulado</label>
                <input value="@ViewBag.FutureValue" readonly class="form-control col-3" />                
            </div>
            <div class="row">
                <div class="col offset-3 p-lg-0">
                    <button type="submit" class="btn btn-primary">Calcular</button>
                    <a asp-action="Index" class="btn btn-secondary">Limpar</a>

                </div>                
            </div>
        </form>
    </main>

</div>